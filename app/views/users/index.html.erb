<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Is admin?</th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.is_admin? %></td>
        <% if @current_user.is_admin? %>
            <% if user.is_admin?  %>
            <td><%= link_to 'Revoke admin', "/users/revoke_admin/#{user.id}" %></td>
            <% else %>
            <td><%= link_to 'Make admin', "/users/make_admin/#{user.id}" %></td>
            <% end %>
            <td><%= link_to 'Delete', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
</table>
