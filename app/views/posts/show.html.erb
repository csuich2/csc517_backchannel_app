<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Text:</b>
  <%= @post.text %>
</p>

<p>
  <b>Poster:</b>
  <%= User.find(@post.owner_id).username %>
</p>

<p>
  <b>Comments:</b>
  <% Comment.where(["post_id = ?", @post.id]).each do |c| %>
    <p><%= c.text %> (<%= User.find(c.owner_id).username %>)</p>
  <% end %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
