<table>
  <tr>
    <th>Title</th>
    <th>Poster</th>
    <th></th>
  </tr>

  <% unless @posts.size == 0 %>
    <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.user.username %></td>
          <td><%= link_to 'Show', post %>
          <% if post.user.id == @current_user.id || @current_user.is_admin? %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
          <% end %>
          </td>
        </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="100">No posts found.</td>
    </tr>
  <% end %>
</table>